<% content_for :topbar do %>
<% if can? :manage, :services %>
<li><%= link_to "HOME", :controller=>"admin", :action=>"index" %></li>
<li><%= link_to "SERVICE", :controller=>"services", :action=>"index" %></li>
<li><%= link_to "COMPONENT", :controller=>"components", :action=>"index" %></li>
<li><%= link_to "SERVER", :controller=>"servers", :action=>"index" %></li>
<li><%= link_to "SOFTWARE", :controller=>"softwares", :action=>"index" %></li>
<% end %>
<% end %>

<div id="title">
<h1>Listing components</h1>
</div>

<table class='components'>
  <tr>
    <th>Name</th>
    <th colspan=3>action</th>
  </tr>

<% @components.each do |component| %>
  <tr>
    <td><%= component.name %></td>
    <td><%= link_to 'Show', component %></td>
    <td><%= link_to 'Edit', edit_component_path(component) %></td>
    <td><%= link_to 'Destroy', component, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<div id="foot_menu">
<%= link_to 'New Component', new_component_path %>
</div>
