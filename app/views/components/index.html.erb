<div id="top_menu">
<%= link_to "|SERVICE", services_path %>
<%= link_to "|COMPONENT", components_path %>
<%= link_to "|SERVER", servers_path %>
<%= link_to "|SOFTWARE|", softwares_path %>
</div>

<div id="title">
<h1>Listing components</h1>
</div>

<p>
<div id="dl_menu">
Download:
<%= link_to "CSV", components_path(format: "csv") %>
</div>
</p>

<table class='components'>
  <tr>
    <th>Name</th>
    <th colspan=3>action</th>
  </tr>

<% @components.each do |component| %>
  <tr>
    <td><%= component.name %></td>
    <td><%= link_to 'Show', component %></td>
    <td><%= link_to 'Edit', edit_component_path(component) %></td>
    <td><%= link_to 'Destroy', component, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<div id="foot_menu">
<%= link_to 'New Component', new_component_path %>
</div>
