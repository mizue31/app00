<% content_for :topbar do %>
<li><%= link_to "SEARCH", :controller=>"search", :action=>"index" %></li>
<% if can? :manage, :services %>
<li><%= link_to "SERVICE", :controller=>"services", :action=>"index" %></li>
<li><%= link_to "COMPONENT", :controller=>"components", :action=>"index" %></li>
<li><%= link_to "SERVER", :controller=>"servers", :action=>"index" %></li>
<li><%= link_to "SOFTWARE", :controller=>"softwares", :action=>"index" %></li>
<% end %>
<% end %>

<div id="title">
<h1>Listing softwares</h1>
</div>

<table class="components">
  <tr>
    <th>Maker</th>
    <th>Sw name</th>
    <th>Version</th>
    <th>Eos date</th>
    <th colspan="3">action</th>
  </tr>

<% @softwares.each do |software| %>
  <tr>
    <td><%= software.maker %></td>
    <td><%= software.sw_name %></td>
    <td><%= software.version %></td>
    <td><%= software.eos_date %></td>
    <td><%= link_to 'Show', software %></td>
    <td><%= link_to 'Edit', edit_software_path(software) %></td>
    <td><%= link_to 'Destroy', software, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<div id="foot_menu">
<%= link_to 'New Software', new_software_path %>
</div>
