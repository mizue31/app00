<div id="top_menu">
<%= link_to "|SERVICE", :controller=>"services", :action=>"index" %>
<%= link_to "|COMPONENT", :controller=>"components", :action=>"index" %>
<%= link_to "|SERVER", :controller=>"servers", :action=>"index" %>
<%= link_to "|SOFTWARE|", :controller=>"softwares", :action=>"index" %>
</div>

<div id="title">
<h1>Listing services</h1>
</div>

<p>
<div id="dl_menu">
Download:
<%= link_to "CSV", services_path(format: "csv") %>
|
<%= form_tag import_services_path, multipart: true do %>
  <%= file_field_tag :file %>
  <%= submit_tag "Upload" %>
<% end %>
</div>
</p>

<table class="components">
  <tr>
    <th>Name</th>
    <th colspan=3>action</th>
  </tr>
<% @services.each do |service| %>
  <tr>
    <td><%= service.name %></td>
    <td><%= link_to 'Show', service %></td>
    <td><%= link_to 'Edit', edit_service_path(service) %></td>
    <td><%= link_to 'Destroy', service, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<% @all_table.each do |s| %>
  <%= s[:id] %>:
  <%= s[:name] %>:
  <% s.service_components.each do |sc| %>
    <%= sc[:service_id] %>:
    <%= sc[:component_id] %>:
    <% s.components.each do |c| %>
      <%= c.name %>:
      <%= c.domain %>
        <% c.component_servers.each do |cs| %>
          <%= cs[:component_id] %>
          <%= cs[:server_id] %>
          <% c.servers.each do |serv| %>
            <%= serv.host_name %>
            <%= serv.os %>
          <% end %>
        <% end %>
    <% end %>
  <% end %>
  </br>
<% end %>

<br />

<div id="foot_menu">
<%= link_to 'New Service', new_service_path %>
</div>
